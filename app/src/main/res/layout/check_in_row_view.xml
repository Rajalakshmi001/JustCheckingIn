<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/check_in_status_image"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_thumb_up_black_24dp" />

        <TextView
            android:id="@+id/check_in_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/check_in_status_image"
            android:layout_toEndOf="@+id/check_in_status_image"
            android:text="@string/default_check_in_comment"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/check_in_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/check_in_status_image"
            android:layout_toEndOf="@+id/check_in_status_image"
            android:text="@string/default_check_in_date"
            android:textAppearance="?android:textAppearanceSmall" />


    </RelativeLayout>
</android.support.v7.widget.CardView>