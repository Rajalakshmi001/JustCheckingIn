<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/appointment_icon"
            android:layout_width="43dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"

            android:layout_marginEnd="@dimen/event_icon_margin"
            app:srcCompat="@drawable/ic_event_black_48dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/appointment_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_reminder_text"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:id="@+id/appointment_comments_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appointment_comments" />

            <TextView
                android:id="@+id/appointment_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_check_in_date"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>